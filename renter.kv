Screen:
    name: "RenterScreen"
    ContentNavigationDrawer:
        MDScreen:
            MDBoxLayout:
                size_hint_y:.90
                FloatLayout:
                    AsyncImage:
                        id:imagexpa
                        size_hint_y: "0.2sp"
                        source: ''
                        allow_stretch: True
                        pos_hint : {'center_x':0.8 ,'center_y':0.85}
                    MDLabel:
                        id: nam
                        text: ""
                        font_style: 'Body1'
                        pos_hint : {'center_x':0.8 ,'center_y':0.71}
                        halign :"center"
                    MDBoxLayout:
                        FloatLayout:
                            orientation: 'horizontal'
                            MDLabel:
                                id : rent_id
                                text: ""
                                font_style: 'Body1'
                                pos_hint : {'center_x':0.15 ,'center_y':0.9}
                                halign :"right"
                                text_align:'left'
                            MDLabel:
                                id : email
                                text: ""
                                font_style: 'Body1'
                                pos_hint : {'center_x':0.15 ,'center_y':0.75}
                                halign :"right"
                                text_align:'left' 
                            MDLabel:
                                id: mobile
                                text: ""
                                font_style: 'Body1'
                                pos_hint : {'center_x':0.15 ,'center_y':0.8}
                                halign :"right"
                                text_align:'left'
                            MDLabel:
                                id: rentt
                                text: ""
                                font_style: 'Body1'
                                pos_hint : {'center_x':0.15 ,'center_y':0.85}
                                halign :"right"
                                text_align:'left'
                    MDLabel:
                        text: "Payment History"
                        font_name: "Comic"
                        font_style: 'Body1'
                        pos_hint : {'center_x':0.5 ,'center_y':0.68}
                        halign :"center"
            MDBoxLayout:
                size_hint_y:.6
                ScrollView:
                    MDList:
                        id: three_list_viewer                   	    
    MDScreen:
        FloatLayout:
            ScreenManager:
                MDScreen:
                    MDBoxLayout:
                        orientation: 'vertical'
                        MDTopAppBar:
                            title: "Renter Details"
                            anchor_title: "left"
                            elevation: 0
                            left_action_items: [['arrow-left',lambda x: app.backrenter()]]
                            right_action_items: [['account-edit',lambda x: app.modifyrenter()]]
                        Widget: